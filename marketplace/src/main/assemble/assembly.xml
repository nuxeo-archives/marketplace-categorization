<project name="categorization-assembly" default="build" xmlns:nx="urn:nuxeo-build" xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />

  <target name="build" description="Build Automated Document Categorization Marketplace Package">
    <tstamp />
    <delete failonerror="false" dir="${maven.project.build.directory}/marketplace" />
    <mkdir dir="${maven.project.build.directory}/marketplace" />
    <copy todir="${maven.project.build.directory}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${maven.project.version}" />
        <filter token="NUXEO_VERSION" value="${nuxeo.distribution.version}" />
      </filterset>
    </copy>

    <copy todir="${maven.project.build.directory}/marketplace/install/bundles">
      <artifact:file key="org.nuxeo.ecm.platform:nuxeo-platform-categorization-service" />
      <artifact:file key="org.nuxeo.ecm.platform:nuxeo-platform-categorization-language" />
      <artifact:file key="org.nuxeo.ecm.platform:nuxeo-platform-categorization-subjects" />
      <artifact:file key="org.nuxeo.ecm.platform:nuxeo-platform-categorization-coverage" />
    </copy>

    <copy todir="${maven.project.build.directory}/marketplace/install/lib">
      <artifact:resolveFile key="org.knallgrau.utils:textcat" />
    </copy>

    <zip destfile="${maven.project.build.directory}/${maven.project.artifactId}-${maven.project.version}.zip"
         basedir="${maven.project.build.directory}/marketplace" />
    <artifact:attach file="${maven.project.build.directory}/${maven.project.artifactId}-${maven.project.version}.zip"
                     type="zip" />
  </target>

</project>
